-- Customers table
CREATE TABLE Customers (
  customer_id INT PRIMARY KEY,
  name VARCHAR(50),
  email VARCHAR(100)
);

-- Orders table
CREATE TABLE Orders (
  order_id INT PRIMARY KEY,
  customer_id INT,       
  product VARCHAR(100),
  amount DECIMAL(10,2)
);

-- Sample data
INSERT INTO Customers (customer_id, name, email) VALUES
  (1, 'Alice', 'alice@gmail.com'),
  (2, 'Bob',   'bob@gmail.com'),
  (3, 'Carol', 'carol@mail.com');

INSERT INTO Orders VALUES
  (101, 1, 'T-shirt', 19.99),
  (102, 1, 'Mug',      9.50),
  (103, 4, 'Hat',     14.00);  -- customer_id=4 does NOT exist in Customers


INNER JOIN



SELECT c.customer_id, c.name, o.order_id, o.product, o.amount
FROM Customers c
INNER JOIN Orders o
  ON c.customer_id = o.customer_id;



LEFT JOIN (LEFT OUTER JOIN)



SELECT c.customer_id, c.name, o.order_id, o.product, o.amount
FROM Customers c
LEFT JOIN Orders o
  ON c.customer_id = o.customer_id
ORDER BY c.customer_id;




RIGHT JOIN (RIGHT OUTER JOIN)

SELECT c.customer_id, c.name, o.order_id, o.customer_id AS order_customer_id, o.product
FROM Customers c
RIGHT JOIN Orders o
  ON c.customer_id = o.customer_id
ORDER BY o.order_id;




